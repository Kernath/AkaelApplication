@model IEnumerable<AkaelApplication.Models.Modelo>

@{
    ViewBag.Title = "Index";
}

<h2>Modelos</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sigla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sigla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdModelo }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdModelo }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.IdModelo })
        </td>
    </tr>
}

</table>
